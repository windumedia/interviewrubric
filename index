<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Interactive Rubric</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    h1 {
      text-align: center;
    }
    input[type="text"] {
      width: 100%;
      padding: 8px;
      margin-bottom: 20px;
      font-size: 16px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
      cursor: pointer;
    }
    th {
      background-color: #f4f4f4;
    }
    td.selected {
      background-color: #add8e6;
    }
  </style>
</head>
<body>
  <h1>Interview Response Rubric</h1>
  <label for="studentName"><strong>Student Name:</strong></label>
  <input type="text" id="studentName" placeholder="Enter student's name here" />

  <table id="rubricTable">
    <thead>
      <tr>
        <th>Criteria</th>
        <th>1 - Try Again</th>
        <th>2 - Needs More Thought</th>
        <th>3 - Needs Examples</th>
        <th>4 - Good, Needs Details</th>
        <th>5 - Great!</th>
      </tr>
    </thead>
    <tbody>
      <tr><td>Clarity</td><td>Unclear</td><td>Somewhat unclear</td><td>Understandable</td><td>Mostly clear</td><td>Very clear</td></tr>
      <tr><td>Relevance</td><td>Off-topic</td><td>Partially on-topic</td><td>Mostly relevant</td><td>Direct</td><td>Fully addresses</td></tr>
      <tr><td>Confidence</td><td>Hesitant</td><td>Some confidence</td><td>Okay</td><td>Confident</td><td>Very confident</td></tr>
    </tbody>
  </table>

  <script>
    const table = document.getElementById('rubricTable');
    table.addEventListener('click', function (e) {
      const cell = e.target;
      if (cell.tagName === 'TD' && cell.cellIndex !== 0) {
        const row = cell.parentElement;
        const alreadySelected = cell.classList.contains('selected');

        // Remove selection from other cells in the same row
        Array.from(row.children).forEach(td => {
          if (td.cellIndex !== 0) td.classList.remove('selected');
        });

        // Toggle the clicked cell
        if (!alreadySelected) {
          cell.classList.add('selected');
        }
      }
    });
  </script>
</body>
</html>
